<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="10dp"
tools:context=".addServiceProfile">

    <TextView
    android:id="@+id/textView2Service"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/textView3"
    android:layout_alignLeft="@+id/textView3"
    android:layout_alignParentTop="true"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="94dp"
    android:text="Services" />

<TextView
    android:id="@+id/ServiceName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="39dp"
    android:layout_marginLeft="39dp"
    android:layout_marginTop="138dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="ServiceName" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="184dp"
        android:text="ADD" />

    <Button
        android:id="@+id/btnServiceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ServiceName"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="209dp"
        android:text="Voir liste des Services" />

    <Button
        android:id="@+id/btnFournisseurService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ServiceName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="152dp"
        android:text="Ma liste de service" />

</RelativeLayout>